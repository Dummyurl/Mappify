<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="130dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <com.example.karshima.mappifyapp.utility.RoundedImageView
                    android:id="@+id/imageee"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:src="@drawable/profile"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <RelativeLayout
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Name Shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.70" />

                <LinearLayout
                    android:background="@drawable/bg_rounded_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:layout_below="@+id/imageView2"
                    android:orientation="vertical">
                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        float:fletPaddingBottom="5dp"
                        float:fletTextAppearance="@style/floatlabelededittext"
                        android:layout_height="wrap_content">

                        <EditText
                            android:drawablePadding="10dp"
                            android:id="@+id/nshop"
                            android:hint="Nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                </LinearLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Email Shop"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="@drawable/bg_rounded_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout6"
                        android:layout_below="@+id/imageView2">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            float:fletPaddingBottom="5dp"
                            float:fletTextAppearance="@style/floatlabelededittext"
                            android:layout_height="wrap_content">

                            <EditText

                                android:drawablePadding="10dp"
                                android:id="@+id/semail"
                                android:inputType="textEmailAddress"
                                android:hint="Enter Your Email Address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Phone Shop"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="@drawable/bg_rounded_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout7"
                        android:layout_below="@+id/imageView2">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            float:fletPaddingBottom="5dp"
                            float:fletTextAppearance="@style/floatlabelededittext"
                            android:layout_height="wrap_content">

                            <EditText

                                android:drawablePadding="10dp"
                                android:id="@+id/phoneshop"
                                android:inputType="phone"
                                android:hint="Enter Your Shop Phone Number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Address Maps"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="@drawable/bg_rounded_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout8"
                        android:layout_below="@+id/imageView2">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            float:fletPaddingBottom="5dp"
                            float:fletTextAppearance="@style/floatlabelededittext"
                            android:layout_height="wrap_content">

                            <EditText

                                android:drawablePadding="10dp"
                                android:id="@+id/mapaddress"
                                android:inputType="text"
                                android:hint="Enter Your Address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Website"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="@drawable/bg_rounded_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout9"
                        android:layout_below="@+id/imageView2">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            float:fletPaddingBottom="5dp"
                            float:fletTextAppearance="@style/floatlabelededittext"
                            android:layout_height="wrap_content">

                            <EditText

                                android:id="@+id/website"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:hint="Enter Website"
                                android:inputType="textUri" />

                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Discount"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="@drawable/bg_rounded_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayoutu"
                        android:layout_below="@+id/imageView2">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            float:fletPaddingBottom="5dp"
                            float:fletTextAppearance="@style/floatlabelededittext">

                            <EditText

                                android:id="@+id/discount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:hint="Discount" />

                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:onClick="itemClicked"
                            android:id="@+id/check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView

                            android:text="Accept"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:text="Contract"

                            android:layout_width="105dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:id="@+id/confirm"
                            android:text="Subscribe and Pay"
                            android:background="@drawable/bkeeee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>




    </ScrollView>

</LinearLayout>

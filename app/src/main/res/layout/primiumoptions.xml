<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>



        <RelativeLayout
            android:id="@+id/r1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/i"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/addshop"
                android:gravity="left"
                android:text="Add a shop"
                android:textSize="18sp"
                android:layout_marginLeft="60dp"
                android:layout_width="200dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/nexxxt"
                android:src="@drawable/mynext_green"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp" />
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/r"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/buy"
                android:text="Buy Primium Card"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_marginLeft="60dp"
                android:layout_width="200dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/nextt"
                android:src="@drawable/mynext_green"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp" />
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/d"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/pcard"
                android:gravity="left"
                android:text="Your Primium Card"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="60dp"
                android:layout_width="210dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/nxttt"
                android:src="@drawable/mynext_green"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <RelativeLayout
                android:id="@+id/r4"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/v"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/discount"
                    android:text="Shopping Discounts"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="210dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:id="@+id/nnnxt"
                    android:src="@drawable/mynext_green"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

                <RelativeLayout
                    android:id="@+id/r5"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/m"
                        android:layout_width="50dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/codes"
                        android:text="Promo codes "
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="210dp"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/pppnext"
                        android:src="@drawable/mynext_green"
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="30dp" />

                    <RelativeLayout
                        android:id="@+id/r6"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/s"
                            android:layout_width="50dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/info"
                            android:text="Information and Support "
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginLeft="60dp"
                            android:layout_width="210dp"
                            android:layout_height="50dp" />
                        <ImageView
                            android:id="@+id/pnext"
                            android:src="@drawable/mynext_green"
                            android:layout_alignParentRight="true"
                            android:layout_width="50dp"
                            android:layout_height="30dp" />

                    </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:background="@color/graywhite"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/literary"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/greyiternary"
                    android:layout_width="50dp"
                    android:layout_height="40dp" />


                <ImageView
                    android:layout_marginLeft="33dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/activity"
                    android:background="@null"
                    android:src="@drawable/greyactivity"
                    android:layout_width="50dp"
                    android:layout_height="40dp" />


                <ImageView
                    android:layout_marginLeft="33dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile"
                    android:src="@drawable/greyprofile"
                    android:background="@null"
                    android:layout_width="50dp"
                    android:layout_height="40dp" />


                <ImageView
                    android:layout_marginLeft="33dp"

                    android:adjustViewBounds="true"
                    android:id="@+id/primium"
                    android:background="@null"
                    android:src="@drawable/greypremium"
                    android:layout_width="50dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Itinerary"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="33dp"
                    android:textSize="12sp"

                    android:textColor="@color/black"
                    android:text="Activity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="33dp"
                    android:textSize="12sp"

                    android:textColor="@color/black"
                    android:text="Profile"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="33dp"
                    android:textSize="12sp"

                    android:textColor="@color/black"
                    android:text="Premium"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>




        </RelativeLayout>




</LinearLayout>